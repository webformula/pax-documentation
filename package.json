{
  "name": "@webformula/pax-documentation",
  "version": "0.0.1",
  "description": "PAX pages and components tool set documentation",
  "main": "server.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/webformula/pax-documentation.git"
  },
  "scripts": {
    "start": "nodemon --watch app --watch src-docs --exec \"npm run build\" & npm run serve",
    "serve": "http-server dist/ -p 8080",
    "build": "node --experimental-modules build.js && npm run package",
    "package": "webpack --config webpack.config.js && cp build/index.html dist/"
  },
  "author": "Ben Rubin (B-3PO)",
  "license": "MIT",
  "dependencies": {
    "@webformula/pax-core": "github:webformula/pax-core#v0.6.0-beta"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "nodemon": "^1.19.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
